<%= flash_messages %>
<h2>Conference Room List</h2>
<div class="product-block">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th class="col-md-4">Name</th>
        <th class="col-md-4"></th>
      </tr>
    </thead>
    <tbody>
      <% @conference_room.each do |room| %>
        <tr>
         <td class="col-md-4"><%= room.name %></td>
         <td class="col-md-4">
            <%= link_to 'Show', {:action => 'show',:controller => 'conference_rooms' ,:id => room.id}, class: "btn btn-info" %>
     </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

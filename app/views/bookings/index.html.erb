<%= flash_messages %>

<h1>Bookings</h1>

<div class="product-block">

    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th class="col-md-3">User</th>
          <th class="col-md-3">Room</th>
          <th class="col-md-3">From</th>
          <th class="col-md-3">To</th>
          <th class="col-md-3">Status</th>
          <th colspan="col-md-3"></th>

        </tr>
      </thead>

      <tbody>
        <% @bookings.each do |booking| %>
          <tr>
            <td class="col-md-3"><%= booking.user_id %></td>
            <td class="col-md-3"><%= booking.room_id %></td>
            <td class="col-md-3" ><%= booking.from %></td>
            <td class="col-md-3"><%= booking.to %></td>
            <td class="col-md-3"><%= booking.status %></td>

            <td class="col-md-3"><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

<br>
</div>
<%= link_to 'New Booking', new_booking_path %>
